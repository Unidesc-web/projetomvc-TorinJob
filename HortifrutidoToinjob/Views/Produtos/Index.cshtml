@* Local: Views/Produtos/Index.cshtml *@
@model IEnumerable<HortifrutidoTorin.Models.Produto>

@{
    ViewData["Title"] = "Nossos Produtos";
}

<style>
    .card-produto {
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: box-shadow .3s;
        margin-bottom: 20px;
    }

        .card-produto:hover {
            box-shadow: 0 0 15px rgba(0,0,0,.2);
        }

        .card-produto img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

    .card-produto-body {
        padding: 15px;
    }

    .card-produto-preco {
        font-size: 1.5em;
        font-weight: bold;
        color: #28a745;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Hortifruti do Torin!</h1>
    <p>Qualidade e frescor direto para a sua mesa.</p>
</div>

<hr />

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card-produto">
                <img src="@produto.ImagemUrl" alt="Imagem de @produto.Nome">
                <div class="card-produto-body">
                    <h4>@produto.Nome</h4>
                    <p>@produto.Descricao</p>
                    <p class="card-produto-preco">@produto.Preco.ToString("C")</p>
                    <a href="#" class="btn btn-success">Comprar</a>
                </div>
            </div>
        </div>
    }
</div>